<Window
    x:Class="ClothesStoreManagement.AccountManageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClothesStoreManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="accountManageWindow"
    Title="Quản lý tài khoản"
    Width="360"
    Height="450"
    ContentRendered="accountManageWindow_ContentRendered"
    Loaded="accountManageWindow_Loaded"
    ResizeMode="CanMinimize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid
        Name="grid"
        Width="360"
        Height="450">
        <Label
            x:Name="labelAccountInfo"
            Width="340"
            Height="46"
            Margin="0,29,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Not logged in"
            FontSize="20" />
        <Button
            x:Name="buttonDelete"
            Width="127"
            Height="25"
            Margin="0,285,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Click="buttonDelete_Click"
            Content="Xóa tài khoản"
            FontSize="14" />
        <Button
            x:Name="buttonModifyPassword"
            Width="128"
            Height="25"
            Margin="0,225,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Click="buttonModifyPassword_Click"
            Content="Thay đổi mật khẩu"
            FontSize="14" />
        <Button
            x:Name="buttonModifyUsername"
            Width="128"
            Height="25"
            Margin="0,165,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Click="buttonModifyUsername_Click"
            Content="Thay đổi tên"
            FontSize="14" />
        <TextBox
            x:Name="textboxUsername"
            Width="180"
            Height="28"
            Margin="0,162,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="14"
            GotFocus="textboxUsername_GotFocus"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="textboxHelp"
            Width="276"
            Height="106"
            Margin="0,334,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderThickness="0,0,0,0"
            Cursor="Arrow"
            Focusable="False"
            FontSize="14"
            Foreground="Gray"
            IsReadOnly="True"
            IsTabStop="False"
            IsUndoEnabled="False"
            Text=""
            TextWrapping="Wrap" />
        <PasswordBox
            x:Name="passwordboxPassword"
            Width="180"
            Height="28"
            Margin="0,176,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="14"
            GotFocus="passwordboxPassword_GotFocus" />
        <Button
            x:Name="buttonConfirm"
            Width="76"
            Height="25"
            Margin="0,225,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Click="buttonConfirm_Click"
            Content="Xác nhận"
            FontSize="14" />
        <Button
            x:Name="buttonCancel"
            Width="76"
            Height="25"
            Margin="0,260,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Click="buttonCancel_Click"
            Content="Hủy"
            FontSize="14" />
        <PasswordBox
            x:Name="passwordboxPasswordOld"
            Width="180"
            Height="28"
            Margin="0,116,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="14" />
        <Label
            Name="labelOldPassword"
            Margin="90,95,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Content="Mật khẩu cũ" />
        <Label
            Name="labelNewPassword"
            Margin="90,155,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Content="Mật khẩu mới" />
    </Grid>
</Window>
