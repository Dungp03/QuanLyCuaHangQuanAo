<Window
    x:Class="ClothesStoreManagement.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClothesStoreManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Home"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid Width="800" Height="450">
        <DataGrid
            Name="dataView"
            Margin="10,222,10,10"
            d:ItemsSource="{d:SampleData ItemCount=2}"
            IsReadOnly="True" />
        <ComboBox
            Name="comboBoxSelectTable"
            Width="120"
            Margin="670,193,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" SelectionChanged="comboBoxSelectTable_SelectionChanged" />
        <Label
            Margin="585,191,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Choose Table" />
    </Grid>
</Window>
