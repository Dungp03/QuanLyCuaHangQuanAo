            x:Name="hd_nhanvien"
            Width="153"
            Height="27"
            Margin="106,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="hd_tenkh"
            Width="178"
            Height="23"
            Margin="399,14,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="sdt"
            Width="178"
            Height="25"
            Margin="399,105,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="hd_diachi"
            Width="178"
            Height="27"
            Margin="399,59,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="hd_mahang"
            Width="128"
            Height="22"
            Margin="90,150,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="hd_sl"
            Width="128"
            Height="25"
            Margin="90,197,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="hd_tenhang"
            Width="170"
            Height="22"
            Margin="299,150,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="hd_dongia"
            Width="130"
            Height="22"
            Margin="590,150,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="hd_thanhtien"
            Width="165"
            Height="25"
            Margin="299,197,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Label
            Width="87"
            Height="27"
            Margin="490,197,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Tổng tiền"
            RenderTransformOrigin="-0.1,2.938" />
        <TextBox
            x:Name="hd_tong"
            Width="130"
            Height="27"
            Margin="590,195,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Label
            Width="170"
            Height="44"
            Margin="599,57,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Thông tin hóa đơn"
            FontSize="16"
            FontStyle="Normal"
            FontWeight="Bold" />
        <Button
            x:Name="hd_lammoi"
            Width="64"
            Height="40"
            Margin="599,304,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="LightPink"
            Click="hd_lammoi_Click"
            Content="Làm mới" />

    </Grid>
</Window>
