<Window
    x:Class="WpfApp2.timkiemkhachang"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="timkiemkhachang"
    Width="800"
    Height="450"
    FontSize="15"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid Background="LavenderBlush">
        <Label
            Width="433"
            Height="41"
            Margin="103,122,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nhập mã khách hàng để hiển thị thông tin chi tiết"
            FontFamily="10"
            FontStyle="Italic"
            Foreground="Red" />

        <DataGrid
            x:Name="dtgrtkkh"
            Width="597"
            Height="232"
            Margin="0,188,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsReadOnly="True" />
        <Label
            Width="183"
            Height="35"
            Margin="10,73,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nhập mã khách hàng" />
        <TextBox
            x:Name="makh"
            Width="223"
            Height="35"
            Margin="198,73,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.748,0.565"
            TextWrapping="Wrap" />
        <Button
            Width="91"
            Height="37"
            Margin="660,211,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="LightPink"
            Click="Button_Click"
            Content="Tìm kiếm"
            RenderTransformOrigin="0.552,1.125" />
        <Button
            x:Name="quaylai"
            Width="91"
            Height="37"
            Margin="660,282,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="LightPink"
            Click="quaylai_Click"
            Content="Quay lại"
            RenderTransformOrigin="0.574,1.337" />
        <Button
            x:Name="dong"
            Width="88"
            Height="37"
            Margin="663,353,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="LightPink"
            Click="dong_Click"
            Content="Đóng"
            RenderTransformOrigin="0.461,1.009" />
        <Label
            Width="252"
            Height="76"
            Margin="519,62,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Tìm kiếm khách hàng"
            FontSize="22"
            FontWeight="DemiBold" />
    </Grid>
</Window>
