            x:Name="phanloai"
            Width="157"
            Height="38"
            Margin="152,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectionChanged="phanloai_SelectionChanged">
            <ComboBoxItem
                Width="144"
                HorizontalAlignment="Left"
                Content="Mã Hàng" />
            <ComboBoxItem
                Width="144"
                HorizontalAlignment="Left"
                Content="Chất liệu" />
            <ComboBoxItem
                Width="144"
                HorizontalAlignment="Left"
                Content="Phân loại hàng" />
        </ComboBox>
        <Label
            Width="65"
            Height="39"
            Margin="82,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Lọc"
            FontSize="18" />
        <Label
            Width="325"
            Height="38"
            Margin="202,22,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Content="Lọc phân loại hàng" />


    </Grid>
</Window>
