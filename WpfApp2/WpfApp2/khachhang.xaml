<Window
    x:Class="WpfApp2.khachhang"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Danh Mục Khách Hàng"
    Width="800"
    Height="450"
    FontSize="16"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid Background="LavenderBlush">
        <DataGrid
            x:Name="grdtkh"
            Width="NaN"
            Height="NaN"
            Margin="10,224,167.6,10"
            SelectionChanged="grdtkh_SelectionChanged_1" />
        <Label
            Width="114"
            Height="31"
            Margin="34,18,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Mã Khách" />
        <Label
            Width="114"
            Height="28"
            Margin="34,77,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Tên Khách" />
        <TextBox
            x:Name="makh"
            Width="195"
            Height="31"
            Margin="153,18,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="tenkh"
            Width="195"
            Height="28"
            Margin="153,77,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Label
            Width="66"
            Height="31"
            Margin="409,18,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Địa chỉ" />
        <Label
            Width="112"
            Height="28"
            Margin="409,77,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Số điện thoại" />
        <TextBox
            x:Name="kh_dc"
            Width="203"
            Height="31"
            Margin="552,18,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="kh_sdt"
            Width="203"
            Height="28"
            Margin="552,77,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Button
            x:Name="kh_them"
            Width="59"
            Height="22"
            Margin="0,153,685.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="kh_them_Click"
            Content="Thêm" />
        <Button
            x:Name="kh_sua"
            Width="59"
            Height="23"
            Margin="0,153,581.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="kh_sua_Click"
            Content="Sửa" />
        <Button
            x:Name="kh_xoa"
            Width="59"
            Height="21"
            Margin="0,153,463.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="kh_xoa_Click"
            Content="Xóa" />
        <Button
            x:Name="kh_lammoi"
            Width="59"
            Height="27"
            Margin="0,151,351.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="kh_lammoi_Click"
            Content="Làm mới" />
        <Button
            x:Name="kh_dong"
            Width="102"
            Height="28"
            Margin="0,151,203.6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="kh_dong_Click"
            Content="Đóng"
            RenderTransformOrigin="-0.129,-1.971" />

    </Grid>
</Window>
